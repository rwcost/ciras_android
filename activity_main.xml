<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/yi"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <AbsoluteLayout
        android:id="@+id/AbsoluteLayout1"
        android:layout_width="match_parent"
        android:layout_height="513dp"
        android:layout_x="1dp"
        android:layout_y="0dp" >

        <Button
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="238dp"
            android:layout_y="324dp"
            android:text="Calculate" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="270dp"
            android:layout_y="1dp"
            android:src="@drawable/heart1" />

        <ToggleButton
            android:id="@+id/isSmoker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="214dp"
            android:layout_y="147dp"
            android:text="ToggleButton"
            android:textOff="Non-Smoker"
            android:textOn="Smoker" />

        <ToggleButton
            android:id="@+id/isDiabetic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="212dp"
            android:layout_y="98dp"
            android:text="ToggleButton"
            android:textOff="Non-Diabetic"
            android:textOn="Diabetic" />

        <ToggleButton
            android:id="@+id/IsMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="245dp"
            android:layout_y="196dp"
            android:text="ToggleButton"
            android:textOff="Female"
            android:textOn="Male" />

        <ToggleButton
            android:id="@+id/isOnMeds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="232dp"
            android:layout_y="243dp"
            android:text="ToggleButton"
            android:textOff="No Meds"
            android:textOn="On Meds" />

        <EditText
            android:id="@+id/EditText02"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_x="174dp"
            android:layout_y="1dp"
            android:ems="10"
            android:text="C.I.R.A.S" />

        <EditText
            android:id="@+id/EditText03"
            android:layout_width="98dp"
            android:layout_height="43dp"
            android:layout_x="0dp"
            android:layout_y="0dp"
            android:ems="3"
            android:text="User ID" />

        <EditText
            android:id="@+id/EditText05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="94dp"
            android:layout_y="-2dp"
            android:ems="3"
            android:inputType="number"
            android:text="0" />

        <EditText
            android:id="@+id/hdlBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="60dp"
            android:layout_y="51dp"
            android:ems="3"
            android:inputType="number"
            android:text="0" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="-1dp"
            android:layout_y="51dp"
            android:ems="3"
            android:text="HDL" />

        <EditText
            android:id="@+id/EditText01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="0dp"
            android:layout_y="103dp"
            android:ems="3"
            android:text="LDL" />

        <EditText
            android:id="@+id/ldlBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="61dp"
            android:layout_y="104dp"
            android:ems="3"
            android:inputType="number"
            android:text="0" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_x="0dp"
            android:layout_y="155dp"
            android:ems="6"
            android:text="Age" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/ageBox"
            android:layout_width="61dp"
            android:layout_height="wrap_content"
            android:layout_x="54dp"
            android:layout_y="155dp"
            android:ems="5"
            android:inputType="number"
            android:text="0" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_x="2dp"
            android:layout_y="205dp"
            android:ems="6"
            android:text="Diastolic" />

        <EditText
            android:id="@+id/diastolicBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="96dp"
            android:layout_y="205dp"
            android:ems="3"
            android:inputType="number"
            android:text="0" />

        <EditText
            android:id="@+id/EditText04"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_x="4dp"
            android:layout_y="256dp"
            android:ems="6"
            android:text="Systolic" />

        <EditText
            android:id="@+id/systolicBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="90dp"
            android:layout_y="256dp"
            android:ems="3"
            android:inputType="number"
            android:text="0" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="6dp"
            android:layout_y="306dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text="Enter your information and press &apos;Calculate&apos; for RAS&apos;" />

    </AbsoluteLayout>

</AbsoluteLayout>